#include <stdint.h>
#include <stdbool.h>
#include <stdio.h>
#include "stm32f10x.h"

void SysTick_Handler()
{
    // Executa um toggle nos pinos PB10, PB11 e PB12 (LEDs 1, 2 e 3)
    GPIOB->ODR ^= (1 << 10) | (1 << 11) | (1 << 12);
}

int main(void)
{
    // Habilita o GPIOB
    RCC->APB2ENR = 0x00000008;

    // Configura os pinos PB10, PB11 e PB12 como saídas
    GPIOB->CRH = 0x44443444; // PB10, PB11, PB12

    // Configura o SysTick para gerar uma interrupção a cada 200 ms (5 Hz)
    SysTick->LOAD = 200000 - 1; // 200 ms (em microssegundos)
    SysTick->CTRL = 0x00000007;  // Habilita o SysTick e a interrupção

    while (1)
    {
        // O loop infinito não precisa de código adicional
    }
}
